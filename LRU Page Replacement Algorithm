#include <stdio.h>

int main() {
    int frames, pages, i, j, faults = 0;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    int page[pages], frame[frames], time[frames];
    int counter = 0;

    printf("Enter page reference string:\n");
    for(i = 0; i < pages; i++)
        scanf("%d", &page[i]);

    for(i = 0; i < frames; i++)
        frame[i] = -1;

    for(i = 0; i < pages; i++) {
        int found = 0;

        for(j = 0; j < frames; j++) {
            if(frame[j] == page[i]) {
                counter++;
                time[j] = counter;
                found = 1;
                break;
            }
        }

        if(!found) {
            int min = 0;
            for(j = 1; j < frames; j++)
                if(time[j] < time[min])
                    min = j;

            frame[min] = page[i];
            counter++;
            time[min] = counter;
            faults++;
        }
    }

    printf("Total Page Faults (LRU): %d\n", faults);
    return 0;
}
