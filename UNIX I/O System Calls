#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {

    // fcntl example
    int fd = open("test.txt", O_CREAT | O_RDWR, 0644);
    fcntl(fd, F_SETFL, O_APPEND);

    write(fd, "UNIX I/O Calls\n", 15);

    // lseek example
    lseek(fd, 0, SEEK_SET);

    char buffer[50];
    read(fd, buffer, 15);
    buffer[15] = '\0';
    printf("File Content: %s\n", buffer);

    close(fd);

    // stat example
    struct stat st;
    stat("test.txt", &st);
    printf("File Size: %ld bytes\n", st.st_size);

    // opendir & readdir example
    DIR *dir = opendir(".");
    struct dirent *entry;

    printf("\nDirectory Listing:\n");
    while((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }

    closedir(dir);

    return 0;
}
