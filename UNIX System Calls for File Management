#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char data[100];

    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);

    write(fd, "Hello UNIX System Calls\n", 24);

    lseek(fd, 0, SEEK_SET);

    read(fd, data, 24);
    data[24] = '\0';

    printf("File Content: %s", data);

    close(fd);

    return 0;
}
