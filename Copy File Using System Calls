#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int source, dest;
    char buffer[100];
    int bytes;

    source = open("source.txt", O_RDONLY);
    dest = open("dest.txt", O_WRONLY | O_CREAT, 0644);

    if (source < 0 || dest < 0) {
        printf("File error\n");
        return 1;
    }

    while ((bytes = read(source, buffer, sizeof(buffer))) > 0) {
        write(dest, buffer, bytes);
    }

    close(source);
    close(dest);

    printf("File copied successfully.\n");
    return 0;
}
